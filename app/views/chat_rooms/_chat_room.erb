<%= turbo_frame_tag chat_room do %>
  <%= link_to chat_room_path(chat_room), data: {"turbo-frame": "_top"} do %>
    <div class="flex items-center mb-4 cursor-pointer hover:bg-gray-100 p-2 hover:text-black rounded-md">
        <div class="w-12 h-12 bg-gray-300 rounded-full mr-3 ring-1">
            <img src="https://placehold.co/200x/ffa8e4/ffffff.svg?text=ʕ•́ᴥ•̀ʔ&font=Lato" alt="User Avatar" class="w-10 h-10 rounded-full">                    
        </div>
        <div class="flex-1 ml-2">
            <h2 class="font-semibold text-lg"><%= chat_room.user.username %></h2>
            <p class="text-gray-600"><%= chat_room.name %> </p>
        </div>
    </div>
  <% end %>  
<% end %>
