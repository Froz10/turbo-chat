<div class="w-screen h-screen justify-center items-center bg-gray-200">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="bg-grey-lighter min-h-screen flex flex-col">
      <div class="container max-w-sm mx-auto flex flex-col items-center justify-center mt-20 px-2 max-w-md w-full rounded p-6 space-y-4">
        <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full mb-20">
          <div class="flex justify-center items-center flex-col" >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 text-gray-600 mb-2" viewbox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
            </svg>
          </div>
          <h1 class="text-center text-2xl font-bold text-gray-600 mb-6">SIGN IN</h1>
          <div class="mb-4">
            <input 
                type="text"
                class="w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded border-none hover:ring-1 outline-blue-500"
                name="user[username]"
                autofocus="autofocus"
                id="user_username"
                autocomplete="username"
                placeholder="Username">
          </div>

          <div class="mb-4">
            <input 
                type="password"
                class="w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded border-none hover:ring-1 outline-blue-500"
                name="user[password]"
                id="user_password"
                autocomplete="current-password"
                placeholder="Password">
          </div>      

          <% if devise_mapping.rememberable? %>
              <div class="flex items-center justify-between">
                <div class="flex flex-row items-center">
                  <input name="user[remember_me]" type="hidden" value="0" autocomplete="off">       
                  <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" class="focus:ring-blue-600 accent-blue-700">
                  <label for="user_remember_me" class="ml-2 text-sm font-normal text-gray-600">Remember me</label>
                </div>
                <div>
                  <a class="text-sm text-blue-600 focus:blue-600 hover:underline" href="/users/password/new">Forgot password?</a>
                </div>
              </div>
            <% end %>  
            <button class="w-full p-4 mt-4 bg-blue-600 hover:bg-blue-700 rounded text-sm font-bold text-gray-50 transition duration-200" id="sign_in" type="submit"><span>Sign In</span></button>
          </div>  
        </div>
      </div>
    </div>
  <% end %>
</div>
