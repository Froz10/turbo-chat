<div class="flex-1" 
    data-controller="message">
  <header class="bg-white p-4 text-gray-700">
    <h1 class="text-2xl font-semibold"><%= @chat_room.name %></h1>
  </header> 
    <div id="messages">
        <div class="h-screen overflow-y-auto p-4 pb-36">            
          <% @chat_room.messages.each do |message| %>             
            <div data-user-id="<%= message.user.id %>">
                <!-- Incoming Message -->

                
                <!-- Outgoing Message -->
                <div class="flex justify-end mb-4 cursor-pointer">
                  <div class="flex flex-col max-w-96">
                    <p class="bg-indigo-500 text-white rounded-lg p-3 gap-3"><%= message.body %></p>
                    <p class="text-sm font-normal text-gray-600"><%= message.created_at.strftime("%H:%M:%S") %></p>
                  </div>
                  <div class="w-9 h-9 rounded-full flex items-center justify-center ml-2">
                      <img src="https://placehold.co/200x/b7a8ff/ffffff.svg?text=ʕ•́ᴥ•̀ʔ&font=Lato" alt="My Avatar" class="w-8 h-8 rounded-full">
                  </div>
                </div>
            </div>  
          <% end %>  
            
        </div>
      <footer class="bg-white border-t border-gray-300 p-4 absolute bottom-0 w-3/4">
          <%= render partial: "messages/form" %>
      </footer>      
    </div>
</div>
